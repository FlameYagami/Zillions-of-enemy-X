<Window x:Class="CardEditor.View.DlgOk"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="DlgOK" Height="125" Width="200" WindowStartupLocation="CenterOwner"
        Style="{DynamicResource ChildWindow}">
    <Border Style="{DynamicResource BorderWindow}" Name="BorderView" Background="#1A1A1A">
        <Grid>
            <Label x:Name="LblHint" Margin="10,10,10,40" Style="{DynamicResource LblCenter}" FontSize="14"
                   Foreground="White" />
            <Button x:Name="BtnConfirm" Content="确定" Margin="10,90,10,10" Click="BtnConfirm_Click" />
        </Grid>
    </Border>
</Window>