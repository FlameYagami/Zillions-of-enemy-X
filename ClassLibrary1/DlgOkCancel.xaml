<Window x:Class="DeckEditor.View.DlgOkCancel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="DlgOkCancel" Height="125" Width="200" WindowStartupLocation="CenterOwner" Style="{DynamicResource ChildWindow}">
    <Border Style="{DynamicResource BorderWindow}" Name="BorderView" Background="#1A1A1A">
        <Grid>
        <Label x:Name="LblHint" Margin="10,10,10,40" HorizontalContentAlignment="Center"
               VerticalContentAlignment="Center" FontSize="14" Foreground="White"/>
        <Button x:Name="BtnCacncel" Content="取消" Margin="10,90,105,10" Click="BtnCacncel_Click" />
        <Button x:Name="BtnConfirm" Content="确定" Margin="105,90,10,10" Click="BtnConfirm_Click" />
        </Grid>
    </Border>
</Window>