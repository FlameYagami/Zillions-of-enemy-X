<Window x:Class="Dialog.DialogConfirm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" Width="320" Height="180"
        Title="DlgOkCancel" WindowStartupLocation="CenterOwner"
        Style="{DynamicResource ChildWindow}">
    <Border Style="{DynamicResource BorderWindow}" Name="BorderView" Background="#1A1A1A">
        <DockPanel>
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Bottom" HorizontalAlignment="Center">
                <Button x:Name="BtnCacncel" Content="取消" Margin="16 0 8 16" Click="BtnCacncel_Click" Width="64"/>
                <Button x:Name="BtnConfirm" Content="确定" Margin="8 0 16 16" Click="BtnConfirm_Click" IsDefault="True" Width="64"/>
            </StackPanel>
            <Label x:Name="LblHint" Margin="16" HorizontalContentAlignment="Center"
                   VerticalContentAlignment="Center" FontSize="14" Foreground="White" />
        </DockPanel>
    </Border>
</Window>