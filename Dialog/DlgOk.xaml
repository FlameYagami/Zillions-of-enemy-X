<Window x:Class="Dialog.DlgOk"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="DlgOK" Height="125" Width="200" WindowStartupLocation="CenterOwner"
        Style="{DynamicResource ChildWindow}">
    <Border Style="{DynamicResource BorderWindow}" Name="BorderView" Background="#1A1A1A">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="35" />
            </Grid.RowDefinitions>
            <Label Grid.Row="0" x:Name="LblHint" Margin="10" VerticalContentAlignment="Center"
                   HorizontalContentAlignment="Center" FontSize="14" Foreground="White" />
            <Button Grid.Row="1" x:Name="BtnConfirm" Content="确定" Click="BtnConfirm_Click" Margin="10,0,10,10"
                    IsDefault="True" />
        </Grid>
    </Border>
</Window>