<Window x:Class="Dialog.DlgOkCancel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="DlgOkCancel" Height="125" Width="200" WindowStartupLocation="CenterOwner"
        Style="{DynamicResource ChildWindow}">
    <Border Style="{DynamicResource BorderWindow}" Name="BorderView" Background="#1A1A1A">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="35" />
            </Grid.RowDefinitions>
            <Label Grid.Row="0" x:Name="LblHint" Margin="10" HorizontalContentAlignment="Center"
                   VerticalContentAlignment="Center" FontSize="14" Foreground="White" />
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0" x:Name="BtnCacncel" Content="取消" Margin="10,0,5,10" Click="BtnCacncel_Click" />
                <Button Grid.Column="1" x:Name="BtnConfirm" Content="确定" Margin="5,0,10,10" Click="BtnConfirm_Click"
                        IsDefault="True" />
            </Grid>
        </Grid>
    </Border>
</Window>